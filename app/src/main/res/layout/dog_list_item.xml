<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dog_name_recyc_view"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical|left"
        android:text="DogName"
        app:layout_constraintBottom_toBottomOf="@+id/dog_list_image"
        app:layout_constraintLeft_toRightOf="@+id/dog_list_image"
        app:layout_constraintTop_toTopOf="@+id/dog_list_image" />

    <ImageView
        android:id="@+id/dog_list_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/stockdog"/>

    <View
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_list_image"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/dog_walks_rv"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|left"
        app:layout_constraintBottom_toBottomOf="@+id/dog_name_recyc_view"
        app:layout_constraintLeft_toRightOf="@+id/dog_name_recyc_view"
        app:layout_constraintTop_toTopOf="@+id/dog_name_recyc_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dog_dist_tv"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|left"
        app:layout_constraintBottom_toBottomOf="@+id/dog_name_recyc_view"
        app:layout_constraintTop_toTopOf="@+id/dog_name_recyc_view"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/dog_time_rv"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|left"
        app:layout_constraintRight_toLeftOf="@+id/dog_dist_tv"
        app:layout_constraintLeft_toRightOf="@id/dog_walks_rv"
        app:layout_constraintBottom_toBottomOf="@+id/dog_name_recyc_view"
        app:layout_constraintTop_toTopOf="@+id/dog_name_recyc_view" />
</android.support.constraint.ConstraintLayout>