<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_track_walk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cgehredo.walkingthedog.TrackWalk">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraintLayout"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer4"
            tools:layout_editor_absoluteY="66dp"
            app:layout_constraintRight_toRightOf="@+id/cur_time_title"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="Walk Time"
            android:layout_width="0dp"
            android:id="@+id/cur_time_title"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="Walk Distance"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/cur_dist_title"
            app:layout_constraintTop_toTopOf="@+id/cur_time_title"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/distance_display"
            app:layout_constraintRight_toRightOf="@+id/cur_dist_title"
            app:layout_constraintLeft_toLeftOf="@+id/cur_dist_title"
            app:layout_constraintBottom_toBottomOf="@+id/chronometer4" />

        <TextView
            android:text="Dog Goals"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/dogs_goals"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_dog_walk"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:text="Dog"
            android:layout_height="50dp"
            android:id="@+id/walks_rem_title"
            android:layout_width="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dogs_goals"
            app:layout_constraintLeft_toLeftOf="@+id/dogs_goals" />

        <TextView
            android:text="Walks Left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/walks_rem_val"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dogs_goals"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/walks_rem_title"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="Time Left"
            android:layout_width="wrap_content"
            android:id="@+id/time_rem_title"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dogs_goals"
            app:layout_constraintRight_toLeftOf="@+id/time_rem_val"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/walks_rem_val"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="Distance Left"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/time_rem_val"
            app:layout_constraintTop_toBottomOf="@+id/dogs_goals"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp" />

        <Button
            android:text="Button"
            android:layout_width="97dp"
            android:layout_height="58dp"
            android:id="@+id/edit_dog_walk"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/distance_display"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/cur_dist_title" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/distance_display"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toRightOf="@+id/cur_time_title" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/dogs_goals"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toLeftOf="@+id/distance_display"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/button"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/constraintLayout"
        android:layout_marginTop="73dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

</RelativeLayout>
